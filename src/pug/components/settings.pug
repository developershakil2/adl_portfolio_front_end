mixin setting-menu(invert)
  .menu-setting
    - var locales = ['ar','de','en','id','pt','zh']
    .setting
      |
      |
      button.btn-icon.waves-effect.dropdown-trigger(
        data-target="dropdown_config"
        type="button"
        data-align=doc_dir === "rtl" ? "right" : "left"
      )
        |
        |
        i.icon.material-icons(
          class=invert && "invert"
        ) settings
        |
        |
      .dropdown-content#dropdown_config
        ul.collection.with-header
          li.collection-header #{$t.maskulino_landing.header_theme}
          li.collection-item.no-hover.pl-4
            .flex-menu
              .switch
                |
                |
                label
                  | #{$t.maskulino_landing.header_light}
                  input#theme_switcher(type='checkbox')
                  span.lever
                  | #{$t.maskulino_landing.header_dark}
                |
                |
        .dropdown-divider
        ul#lang_menu.collection.with-header.lang-menu
          li.collection-header #{$t.maskulino_landing.header_language}
          each locale in locales
            li.collection-item.lang-list.waves-effect.avatar
              |
              |
              a(data-lang=locale href="#")
                .flag.circle
                  i(class=locale)
                |
                |
                span.content.lang-opt.text-truncate #{$t.common[locale]}
              |
              |
  